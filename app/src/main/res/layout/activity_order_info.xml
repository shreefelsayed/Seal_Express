<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:layoutDirection="ltr"
    tools:context=".SuperVisor.OrderInfo">

    <include
        android:id="@+id/dsToolbar"
        layout="@layout/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/dsToolbar"
        app:layout_constraintStart_toStartOf="@+id/dsToolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_white"
        app:tint="@color/orange"/>

    <ImageView
        android:id="@+id/btnUpdates"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/dsToolbar"
        app:layout_constraintEnd_toStartOf="@+id/btnOrderMap"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_history"
        app:tint="@color/orange" />

    <ImageView
        android:id="@+id/btnOrderMap"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/dsToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_no_map" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dsToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ic_profile_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#F1F1F1"
                android:backgroundTint="#F1F1F1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_30sdp">

                <LinearLayout
                    android:id="@+id/linSupplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_weight="0.5"
                        android:text="الراسل"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="RtlCompat" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@color/background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btnWhatsSender"
                                android:layout_width="@dimen/_34sdp"
                                android:layout_height="@dimen/_34sdp"
                                android:layout_marginRight="5dp"
                                app:srcCompat="@drawable/ic_whatsapp" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btnCallSupplier"
                                android:layout_width="@dimen/_34sdp"
                                android:layout_height="@dimen/_34sdp"
                                android:backgroundTint="@color/green_500"
                                android:clickable="true"
                                app:elevation="8dp"
                                app:fabCustomSize="@dimen/_34sdp"
                                app:srcCompat="@drawable/ic_call_24" />

                            <LinearLayout
                                android:id="@+id/linSender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="20"
                                android:gravity="right"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/ddUsername"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_weight="0.5"
                                    android:gravity="right"
                                    android:text="الراسل"
                                    android:textAlignment="viewEnd"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/ddCount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="عدد الاوردرات التي تم تنزيلها"
                                    android:textAlignment="viewEnd"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/_9sdp" />

                            </LinearLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardView"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginTop="10dp"
                                    app:cardCornerRadius="@dimen/_40sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:id="@+id/supPP"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:srcCompat="@color/colorWhite" />
                                </androidx.cardview.widget.CardView>

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/date3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center|right"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/ic_date"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="تاريخ استلام الشحنة :"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorPrimary"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txtDAddress"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableRight="@drawable/ic_add_address"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="عنوان المستلم :"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="@color/colorBack"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/constClient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="المستلم"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btnWhatsReciver"
                                android:layout_width="@dimen/_34sdp"
                                android:layout_height="@dimen/_34sdp"
                                android:layout_marginRight="5dp"
                                app:srcCompat="@drawable/ic_whatsapp" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btnCall"
                                android:layout_width="@dimen/_34sdp"
                                android:layout_height="@dimen/_34sdp"
                                android:backgroundTint="@color/green_500"
                                android:clickable="true"
                                app:elevation="8dp"
                                app:fabCustomSize="@dimen/_34sdp"
                                app:srcCompat="@drawable/ic_call_24" />

                            <TextView
                                android:id="@+id/txtCustomerName"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center|right"
                                android:layout_weight="1"
                                android:drawableRight="@drawable/ic_clients"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="اسم المستلم : "
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center|right"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/ic_date"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="تاريخ التسليم : "
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorPrimary"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/dsDAddress"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableRight="@drawable/ic_add_address"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="عنوان المستلم :"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="@color/colorBack"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linPackage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_weight="0.5"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|right"
                        android:text="الشحنة"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/orderid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="رقم تتبع الشحنه : ٠٤٥٣٤٥٣"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:id="@+id/linFromTo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/orderto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:layout_marginRight="@dimen/_4sdp"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:id="@+id/icTrans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="0dp"
                                app:srcCompat="@drawable/ic_vespa" />

                            <TextView
                                android:id="@+id/OrderFrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:layout_marginRight="@dimen/_4sdp"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtPostDate2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_8sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtOrder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/round_bg_no_padding"
                                android:backgroundTint="#FFEB3B"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingTop="@dimen/_1sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_1sdp"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="0dp"
                                android:layout_weight="0.5"
                                android:drawableRight="@drawable/ic_weight"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="حاله الشحنه :"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorBack"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_weight="0.5"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/txtWeight"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/ic_weight"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="الوزن"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="@color/colorBack"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/txtPack"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/ic_package"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="الرساله"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="@color/colorBack"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ordercash2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/round_bg_no_padding"
                                android:backgroundTint="@color/green_500"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingTop="@dimen/_1sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_1sdp"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="0dp"
                                android:layout_weight="0.5"
                                android:drawableRight="@drawable/ic_add_money"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="اجمالي التحصيل :"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorBack"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fees2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/round_bg_no_padding"
                                android:backgroundTint="@color/red_500"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingTop="@dimen/_1sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_1sdp"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="0dp"
                                android:layout_weight="0.5"
                                android:drawableRight="@drawable/ic_add_money"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="مصاريف الشحن :"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorBack"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/txtNotes"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/ic_notes"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="الملاحظات"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="@color/colorBack"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>
                </LinearLayout>

                <include
                    android:id="@+id/advice"
                    layout="@layout/footer_advice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>